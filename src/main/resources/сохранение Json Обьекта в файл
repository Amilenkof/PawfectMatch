        Update update1 = updates.get(0);
        ObjectMapper mapper = new ObjectMapper();
        try {
            mapper.writeValue(new File("/src/main/resources/updateJson.json"), updates.get(0));
        } catch (IOException e) {
            throw new RuntimeException(e);
        }



